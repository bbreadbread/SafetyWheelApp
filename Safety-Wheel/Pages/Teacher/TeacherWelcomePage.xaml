<Page x:Class="Safety_Wheel.Pages.Teacher.TeacherWelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Teacher"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1200"
      Title="TeacherWelcomePage"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="3" Grid.Row="0" Style="{StaticResource MainWelcomeLabel}" FontSize="40" FontWeight="Bold" Foreground="{StaticResource DarkBlue}" Text="Добро пожаловать в панель преподавателя"  Margin="60"/>
        <TextBlock Grid.ColumnSpan="3" Grid.Row="1" Style="{StaticResource MainWelcomeLabel}" FontSize="25" Text="Здесь можно следить и управлять процессом тестирования. 
Создавайте тесты, следите за успеваемостью учеников и получайте аналитику результатов."/>
        <TextBlock Grid.ColumnSpan="3" Grid.Row="2" Style="{StaticResource MainWelcomeLabel}" FontSize="32" Text="Все инструменты для контроля за обучением собраны в одном месте" Margin="60"/>

        <Border Grid.Column="0" Grid.Row="3" Margin="40 0"  Style="{StaticResource GeneralWelcome50r}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Welcome30r}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <iconPacks:PackIconMaterial Grid.Column="0" Kind="ChartLine" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>

                        <Label Grid.Column="1" Content="Статистика" Style="{StaticResource WelcomeLabel}"/>
                    </Grid>
                </Border>
                <TextBlock Grid.Row="1" Style="{StaticResource WelcomeTxt}" Text="Здесь вы можете посмотреть результаты тестирования в виде статистики. Она помогает оценить успеваемость учеников и увидеть, как в среднем они отвечают на тесты. Эти данные помогут скорректировать обучение и добиться лучших результатов."/>
            </Grid>
        </Border>

        <Border Grid.Column="1" Grid.Row="3" Margin="40 0"  Style="{StaticResource GeneralWelcome50r}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Welcome30r}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <iconPacks:PackIconMaterial Grid.Column="0" Kind="ChartBar" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>

                        <Label Grid.Column="1" Content="Результаты" Style="{StaticResource WelcomeLabel}"/>
                    </Grid>
                </Border>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource WelcomeTxt}" Text="В этом разделе вы можете просмотреть детализацию прохождений тестов вашими учениками."/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource WelcomeTxt}" Text="Для удобства отслеживания воспользуйтесь сортировкой по месяцам"/>
                    <iconPacks:PackIconMaterial Grid.Row="1" Grid.Column="1" Kind="Sort" Foreground="{StaticResource DarkBlue}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30" Margin="10"/>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Column="2" Grid.Row="3" Margin="40 0"  Style="{StaticResource GeneralWelcome50r}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource Welcome30r}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Grid.Column="0" Kind="PlusBox" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                        <Label Grid.Column="1" Content="Тесты" Style="{StaticResource WelcomeLabel}"/>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource WelcomeTxt}" Text="В данном разделе собраны все тесты, созданные вами ранее."/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource WelcomeTxt}" Text="Нажмите на любой из них, чтобы внести изменения, или создайте новый, воспользовавшись панелью с кнопкой «+»"/>
                    <Image Grid.Row="1" Grid.Column="1" Source="pack://application:,,,/Images/plus_icon.png" Width="40" Height="40"  Margin="10"/>
                </Grid>
            </Grid>
        </Border>
        <Border Style="{StaticResource Welcome30r}" Grid.ColumnSpan="2" Grid.Row="4" Margin="40 80">
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconMaterial Grid.Column="0" Kind="AccountCog" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                    <Label Grid.Column="1" Content="Управление учениками" Style="{StaticResource WelcomeLabel}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
