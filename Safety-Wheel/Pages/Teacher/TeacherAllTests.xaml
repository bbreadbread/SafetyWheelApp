<UserControl x:Class="Safety_Wheel.Pages.Teacher.TeacherAllTests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:Safety_Wheel.Converters"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <ScrollViewer Margin="40" Grid.Row="0" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <ItemsControl ItemsSource="{Binding Tests}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="20"
                                BorderBrush="{StaticResource LightGray}"
                                Background="White"
                                BorderThickness="2"
                                CornerRadius="6"
                                Width="400"
                                Height="300"
                                MouseLeftButtonUp="Card_Click"
                                Tag="{Binding}"
                                Style="{StaticResource CardBorderStyle}">
                                    <Grid>
                                        <Grid Visibility="{Binding IsCreateCard,
                                  Converter={StaticResource InverseBoolToVisibility}}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2*"/>
                                                <RowDefinition Height="2"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 25 0" Grid.Row="0">
                                                    <TextBlock Text="{Binding Test.Subject.Name}" FontSize="32"/>
                                                </StackPanel>
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                                                    <TextBlock Text="{Binding Test.Name}" FontSize="32"/>
                                                </StackPanel>


                                            </Grid>

                                            <Border Grid.Row="1"
                                    BorderBrush="{StaticResource LightGray}"
                                    BorderThickness="2"/>

                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0"
                                               Text="{Binding Test.DateOfCreating, StringFormat={}{0:dd.MM.yyyy}}"
                                               VerticalAlignment="Center"  FontSize="20" Margin="30 0 0 0"/>

                                                <CheckBox Grid.Column="0" Grid.Row="1" IsChecked="{Binding IsPublic}" Content="Опубликовать" VerticalAlignment="Center"  FontSize="20" Margin="30 0 0 0"/>

                                                <Button Grid.Column="1"
                                                        Grid.RowSpan="2"
                                                        Tag="{Binding Test}"
                                                        Click="RemoveTest_Click"
                                                        Width="50"
                                                        Height="50"
                                                        HorizontalAlignment="Right"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="0">

                                                    <Image Source="pack://application:,,,/Images/delete_icon.png"
                                                           Width="50"
                                                           Height="50"/>
                                                </Button>
                                            </Grid>
                                        </Grid>

                                        <Grid Visibility="{Binding IsCreateCard,
                              Converter={StaticResource BoolToVisibility}}">
                                            <Border BorderThickness="2" 
                                            Background="{StaticResource LightBlue}"
                                            CornerRadius="6">
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Source="pack://application:,,,/Images/plus_icon.png"
                                                   Width="80"
                                                   Height="80"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
            <Grid Background="#80000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                  Panel.ZIndex="100">

                <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center">

                    <ProgressBar Width="200"
                 Height="20"
                 IsIndeterminate="True"/>

                    <TextBlock Text="Загрузка..."
               Foreground="White"
               FontSize="16"
               Margin="0,10,0,0"
               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
