<UserControl x:Class="Safety_Wheel.Pages.Teacher.TeacherStatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:local="clr-namespace:Safety_Wheel.Pages.Teacher"
             Loaded="TeacherStatisticsPage_Loaded">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       x:Name="StudentTitle"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <scottPlot:WpfPlot Grid.Row="1"
                               Grid.Column="0"
                               x:Name="OverallTimePlot"
                               Height="300"
                               Margin="0,0,20,0"/>

            <ScrollViewer Grid.Row="1"
                          Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <ItemsControl x:Name="TestsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:TestStats}">
                            <StackPanel Margin="0,0,0,30">

                                <TextBlock Text="{Binding TestName}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5"/>

                                <scottPlot:WpfPlot Height="300"
                                                   Loaded="PerformancePlot_Loaded"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
</UserControl>
