<UserControl x:Class="Safety_Wheel.Pages.Teacher.TeacherStatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:local="clr-namespace:Safety_Wheel.Pages.Teacher"
             Loaded="TeacherStatisticsPage_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   x:Name="StudentTitle"
                   Style="{StaticResource MainText}"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="0,0,50,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <scottPlot:WpfPlot x:Name="TimeType1Plot" Height="200" Width="200"/>
                    <TextBlock x:Name="TimeType1Text" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="14" 
                   FontWeight="Bold"
                   TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <scottPlot:WpfPlot x:Name="TimeType2Plot" Height="200" Width="200"/>
                    <TextBlock x:Name="TimeType2Text" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="14" 
                   FontWeight="Bold"
                   TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2">
                    <scottPlot:WpfPlot x:Name="TimeType3Plot" Height="200" Width="200"/>
                    <TextBlock x:Name="TimeType3Text" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="14" 
                   FontWeight="Bold"
                   TextAlignment="Center"/>
                </Grid>
            </Grid>
        </ScrollViewer>


        <ScrollViewer Grid.Row="1"
              Grid.Column="1"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">

            <ItemsControl x:Name="TestsItemsControl"
                  HorizontalAlignment="Stretch">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:TestStats}">
                        <StackPanel Margin="0,0,0,30"
                            HorizontalAlignment="Stretch">

                            <TextBlock Text="{Binding TestName}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,15"
                                       HorizontalAlignment="Center"/>

                            <scottPlot:WpfPlot Height="450"
                                               Width="700"
                                       HorizontalAlignment="Stretch"
                                       Loaded="PerformancePlot_Loaded"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>