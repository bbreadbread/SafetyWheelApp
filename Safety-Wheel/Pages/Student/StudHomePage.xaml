<Page x:Class="Safety_Wheel.Pages.Student.StudHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="StudHomePage">

    <Grid Style="{StaticResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MainTitle}" Grid.Row="0" Text="Выбор дисциплины" Foreground="{StaticResource MainBlue}"/>
        <Button Style="{StaticResource HomeButton}" Width="750" Grid.Row="1" Content="ПДД" Click="ButtonGoPdd_Click"/>
        <Button Style="{StaticResource HomeButton}" Width="750" Grid.Row="23" Content="Медицина" Click="ButtonGoMedicine_Click"/>
    </Grid>
</Page>
