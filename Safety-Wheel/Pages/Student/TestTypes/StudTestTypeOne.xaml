<Page x:Class="Safety_Wheel.Pages.Student.TestTypes.StudTestTypeOne"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student.TestTypes"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="800"
      Title="StudTestTypeOne">

    <Grid Style="{StaticResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" MaxWidth="600">
            <TextBlock Style="{StaticResource MainText}"
                       Foreground="{StaticResource Black}"
                       Text="{Binding TextQuestion}"/>
        </Grid>
        

        <StackPanel x:Name="GeneratedAnswersPanel" Grid.Row="1" Grid.RowSpan="3" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">
            
        </StackPanel>

        <Image Source="{Binding PathImage}" Grid.Row="1"  Grid.RowSpan="3" Grid.Column="1"/>
    </Grid>
</Page>
