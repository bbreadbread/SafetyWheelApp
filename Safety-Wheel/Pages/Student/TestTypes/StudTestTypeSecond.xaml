<Page x:Class="Safety_Wheel.Pages.Student.TestTypes.StudTestTypeSecond"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student.TestTypes"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="800"
      Title="StudTestTypeSecond"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">

    <Grid  Style="{StaticResource MainGrid}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>

                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" MaxWidth="1000">
                <TextBlock Style="{StaticResource MainText}" Foreground="{StaticResource Black}">
                    <Run Text="{Binding TextQuestion}"/>
                </TextBlock>
            </Grid>

            <WrapPanel x:Name="GeneratedAnswersPanel" Grid.Row="1" Orientation="Horizontal">

            </WrapPanel>
        </Grid>
    </Grid>
</Page>
