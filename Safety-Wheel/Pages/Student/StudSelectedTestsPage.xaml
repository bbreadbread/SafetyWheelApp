<Page x:Class="Safety_Wheel.Pages.Student.StudSelectedTestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudSelectedTestsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Style="{StaticResource MainStackPanel}" Grid.Column="0">
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding TypeDiscipline}"/>
            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Тестирвование без спешки"/>
            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Тестирвование на время"/>
            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Режим экзамена"/>
        </StackPanel>

        <Border Grid.Column="1" 
                Margin="25,0,25,0" Background="Transparent">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="GeneratedOptionsPanel">
                    <Border Margin="0,0,0,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Style="{StaticResource ButtonOptionsStackPanel}">
                                <TextBlock Text="Вариант 1" />
                                <Image Source="../Images/relax_icon.png"/>
                                <Image Source="../Images/time_icon.png"/>
                                <Image Source="../Images/exam_icon.png"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                   Style="{StaticResource PlayButtonOptions}"
                                   Click="PlayButton_Click"
                                   Tag="1"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
