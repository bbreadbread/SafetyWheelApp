<Page x:Class="Safety_Wheel.Pages.Student.StudTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="StudTest">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="8*"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock>
                <Run Text="Прохождение теста:"/>
                <Run Text="*"/>
            </TextBlock>            
        </StackPanel>

        <StackPanel Style="{DynamicResource ButtonOptionsStackPanel}" Grid.Column="1">
            <Border>
                <TextBlock Text="00:15:59"/>
            </Border>
        </StackPanel>

        <StackPanel x:Name="GeneratedQuestionsPanel" Style="{DynamicResource ButtonOptionsStackPanel}" Grid.ColumnSpan="2" Grid.Row="1">
            
        </StackPanel>

        <Frame x:Name="TestContentFrame"
               Grid.Row="2"
               Grid.ColumnSpan="2"
               NavigationUIVisibility="Hidden"
               Margin="5"/>

        <Button Content="Принять ответ" Grid.Row="3" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
