<Page x:Class="Safety_Wheel.Pages.Student.StudTestInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="StudTestInfo">

    <Grid Style="{StaticResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource MainTitle}" Text="Ознакомьтесь с информацией ниже" Grid.Row="0" Foreground="{StaticResource MainBlue}"/>

        <StackPanel Grid.Row="1" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Style="{StaticResource MainText}">
                <Run Text="ТИП:"/>
                <Run Text="{Binding TestTypeName}"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Style="{StaticResource MainText}">
                <Run Text="ТЕСТ:"/>
                <Run Text="{Binding TestName}"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="3" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Style="{StaticResource MainText}">
                <Run Text="ВРЕМЯ НА ВЫПОЛНЕНИЕ:"/>
                <Run Text="{Binding TimeLimit}"/>
            </TextBlock>
            <TextBlock/>
        </StackPanel>

        <Button Style="{StaticResource HomeButton}" Content="Начать" Grid.Row="5" Click="ButtonStartTest_Click"/>
    </Grid>
</Page>
