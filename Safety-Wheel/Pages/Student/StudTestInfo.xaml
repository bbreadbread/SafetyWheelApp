<Page x:Class="Safety_Wheel.Pages.Student.StudTestInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudTestInfo">

    <Grid Style="{StaticResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ознакомьтесь с информацией ниже" Grid.Row="0"/>
        
        <StackPanel Grid.Row="1" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Text="ТИП:"/>
            <TextBlock Text=""/>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Text="ТЕСТ:"/>
            <TextBlock Text=""/>
        </StackPanel>

        <StackPanel Grid.Row="3" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Text="ВРЕМЯ НА ВЫПОЛНЕНИЕ:"/>
            <TextBlock Text=""/>
        </StackPanel>

        <StackPanel Grid.Row="4" Style="{DynamicResource ButtonOptionsStackPanel}">
            <TextBlock Text="УЧАСТНИК:"/>
            <TextBlock Text=""/>
        </StackPanel>

        <Button Content="Начать" Grid.Row="5" Click="ButtonStartTest_Click"/>
    </Grid>
</Page>
