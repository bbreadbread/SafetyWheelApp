<Page x:Class="Safety_Wheel.Pages.Student.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safety_Wheel.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Style="{StaticResource MainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Авторизация"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Логин"/>
        <TextBox Grid.Row="1" Grid.Column="1"/>

        <TextBlock  Grid.Row="2" Grid.Column="0" Text="Пароль"/>
        <TextBox  Grid.Row="2" Grid.Column="1"/>
        
        <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Войти" Click="ButtonAuth_Click"/>
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Text="Логин и пароль получается и уточняется у преподавателя"/>

    </Grid>
</Page>
