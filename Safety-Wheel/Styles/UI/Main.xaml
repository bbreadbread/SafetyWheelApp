        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        CornerRadius="2"
                        BorderThickness="5"
                        Margin="10 10 40 10"
                        Background="{StaticResource White}"
                        BorderBrush="{StaticResource Gray}">
                        <ContentPresenter x:Name="content"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                            <ContentPresenter.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping"  Value="Wrap"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBlue}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBlue}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBlue}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBlue}"/>
                        </Trigger>

                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Selected">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBlue}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HoverBlue}"/>
                        </DataTrigger>
                        
                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="SelectedTrue">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Green}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BrightGreen}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="SelectedFalse">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Red}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BrightRed}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LightGreen}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Green}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LightRed}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Red}"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

