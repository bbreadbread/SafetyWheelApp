<Controls:MetroWindow x:Class="Safety_Wheel.ClosedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Safety_Wheel"
        mc:Ignorable="d"
        Title="ClosedWindow" Height="200" Width="400"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        WindowTitleBrush="{StaticResource DarkBlue}"
        GlowBrush="DarkBlue"
        BorderBrush="{StaticResource DarkBlue}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Style="{StaticResource Hint}">
            <Run Text="{Binding WarningText1}"/>
        </TextBlock>

        <TextBlock Grid.Row="1" Style="{StaticResource Hint}">
            <Run Text="{Binding WarningText2}"/>
        </TextBlock>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Style="{StaticResource MiniHomeButton}" x:Name="BtnExit" Grid.Row="3" Grid.ColumnSpan="2" Content="Выход" Click="ButtonExit_Click" />
            <Button Style="{StaticResource MiniHomeButton}" x:Name="BtnCancel" Grid.Row="3" Grid.ColumnSpan="2" Content="Отмена" Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
